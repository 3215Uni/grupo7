<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include('./partials/head.ejs') %>
        <link rel="stylesheet" href="/css/register.css">
    </head>
    <body>
        
    
        <%- include('./partials/header.ejs') %>
    
        <main>
        <br>
    <!-- Contenido específico de la página principal -->
        <div class="container">
            <h2 class="titulo">REGISTRO DE PRODUCTO</h2>        
        <!--CARGA DE PRODUCTOS-->
    
        <form action="/crear-producto" method="POST">
            <label for="name">Nombre del Producto:</label>
            <input type="text" id="name" name="name" required>
    
            <label for="description">Descripción:</label>
            <textarea id="description" name="description" required></textarea>
    
            <label for="image">URL de la Imagen:</label>
            <input type="url" id="image" name="image" required>
    
            <label for="category">Categoría:</label>
            <input type="text" id="category" name="category" required>
    
    
            <label class="textoCampo" for="image">Subir Imagen:</label>
            <input type="file" id="image" name="image" accept="image/*" required>
            
            <label for="price">Cantidad:</label>
            <input type="number" id="cantidad" name="price" min="1" required>

            
            <label for="category">Categoría:</label>
            <select class="formC" id="category" name="category" required>
                <option value="notebook">Notebook</option>
                <option value="tablet">Tablet</option>
                <option value="celulares">Celulares</option>
                <option value="PC">PC de Escritorio</option>
            </select>        

            <label for="price">Precio:</label>
            <input type="number" id="price" name="price" min="0" step="0.01" required>

            <div class="btnDeForm">
                <button type="submit">Crear Producto</button>
                <button type="reset">Borrar datos</button>
            </div>
            
        </form>
        </div>
        <br>
    
    </main>

    <%- include('./partials/footer') %>
</body>
</html>